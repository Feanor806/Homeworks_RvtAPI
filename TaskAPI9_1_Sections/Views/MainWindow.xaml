<Window x:Class="TaskAPI9_1_Sections.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskAPI9_1_Sections.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Создание разреза"
    Width="400"
    Height="300"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Имя разреза -->
        <TextBlock Grid.Row="0" Text="Имя разреза:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" 
           Text="{Binding SectionName, UpdateSourceTrigger=PropertyChanged}"
           Margin="0,0,0,15"
           Height="25"/>

        <!-- Отступы -->
        <TextBlock Grid.Row="2" Text="Отступы (мм):" Margin="0,0,0,10" FontWeight="Bold"/>

        <!-- Ширина -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="По ширине:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" 
               Text="{Binding WidthOffsetMm, UpdateSourceTrigger=PropertyChanged}"
               Height="25"/>
        </Grid>

        <!-- Глубина -->
        <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="По глубине:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" 
               Text="{Binding DepthOffsetMm, UpdateSourceTrigger=PropertyChanged}"
               Height="25"/>
        </Grid>

        <!-- Высота -->
        <Grid Grid.Row="5" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="По высоте:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" 
               Text="{Binding HeightOffsetMm, UpdateSourceTrigger=PropertyChanged}"
               Height="25"/>
        </Grid>

        <!-- Кнопка -->
        <Button Grid.Row="7" 
          Content="Создать разрез" 
          Command="{Binding CreateSectionCommand}"
          Height="35"
          FontSize="14"
          FontWeight="Bold"/>
    </Grid>
</Window>
