<Window x:Class="TaskAPI8_1_WallGeometryStatistics.Views.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskAPI8_1_WallGeometryStatistics.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350"
        Title="Анализ геометрии стен">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Margin="0,10,0,10"
                   FontSize="14"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Text="Анализ геометрии стен" />
        <Button Grid.Row="1"
                Width="100"
                Margin="0,10,0,10"
                Background="MediumSlateBlue"
                Foreground="White"
                HorizontalAlignment="Center"
                Command="{Binding AskWall}"
                Content="Выбрать стену"/>
        <Border Grid.Row="2"
                Padding="16"
                Margin="20,10,20,10"
                CornerRadius="8"
                BorderBrush="Gray"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Информация о стене" 
                           Margin="5,-28,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Foreground="Black"
                           Background="White"
                           Padding="3,0,3,0"
                           FontSize="14"/>

                <TextBlock Grid.Row="0" 
                           Grid.Column="0" 
                           Margin="10,0,0,0" 
                           Text="Имя стены:"/>
                <TextBlock Grid.Row="0" 
                           Grid.Column="1" 
                           HorizontalAlignment="Left" 
                           Margin="10,0,0,0" 
                           Text="{Binding AWall.Name}"/>
                <TextBlock Grid.Row="1" 
                           Grid.Column="0" 
                           Margin="10,0,0,0" 
                           Text="Тип:" />
                <TextBlock Grid.Row="1" 
                           Grid.Column="1" 
                           HorizontalAlignment="Left" 
                           Margin="10,0,0,0"
                           Text="{Binding AWall.Type}" />
            </Grid>
        </Border>
        <Border Grid.Row="3"
                Padding="16"
                Margin="20,10,20,10"
                CornerRadius="8"
                BorderBrush="Gray"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Геометрические параметры"
                           Margin="5,-28,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Foreground="Black"
                           Background="White"
                           Padding="3,0,3,0"
                           FontSize="14"/>
                <TextBlock Grid.Row="0" 
                           Grid.Column="0" 
                           Margin="10,0,0,0" 
                           Text="Длина:" />
                <TextBlock Grid.Row="1" 
                           Grid.Column="0" 
                           Margin="10,0,0,0" 
                           Text="Высота:" />
                <TextBlock Grid.Row="2" 
                           Grid.Column="0" 
                           Margin="10,0,0,0" 
                           Text="Толщина:" />
                <TextBlock Grid.Row="3" 
                           Grid.Column="0" 
                           Margin="10,0,0,0" 
                           Text="Объём:" />
                <TextBlock Grid.Row="4" 
                           Grid.Column="0" 
                           Margin="10,0,0,0" 
                           Text="Площадь:" />
                <TextBlock Grid.Row="0" 
                           Grid.Column="1" 
                           Margin="10,0,0,0" 
                           HorizontalAlignment="Right" 
                           Text="{Binding AWall.Length}" />
                <TextBlock Grid.Row="1" 
                           Grid.Column="1" 
                           Margin="10,0,0,0" 
                           HorizontalAlignment="Right" 
                           Text="{Binding AWall.Height}" />
                <TextBlock Grid.Row="2" 
                           Grid.Column="1" 
                           Margin="10,0,0,0" 
                           HorizontalAlignment="Right" 
                           Text="{Binding AWall.Thickness}" />
                <TextBlock Grid.Row="3" 
                           Grid.Column="1" Margin="10,0,0,0" 
                           HorizontalAlignment="Right" 
                           Text="{Binding AWall.Volume}" />
                <TextBlock Grid.Row="4" 
                           Grid.Column="1" 
                           Margin="10,0,0,0" 
                           HorizontalAlignment="Right" 
                           Text="{Binding AWall.Area}" />
                <TextBlock Grid.Row="0" 
                           Grid.Column="2" 
                           Margin="10,0,0,0" 
                           HorizontalAlignment="Left" 
                           Text="мм" />
                <TextBlock Grid.Row="1" 
                           Grid.Column="2" 
                           Margin="10,0,0,0" 
                           HorizontalAlignment="Left" 
                           Text="мм" />
                <TextBlock Grid.Row="2" 
                           Grid.Column="2" 
                           Margin="10,0,0,0" 
                           HorizontalAlignment="Left" 
                           Text="мм" />
                <TextBlock Grid.Row="3" 
                           Grid.Column="2" 
                           Margin="10,0,0,0" 
                           HorizontalAlignment="Left" 
                           Text="м³" />
                <TextBlock Grid.Row="4" 
                           Grid.Column="2" 
                           Margin="10,0,0,0" 
                           HorizontalAlignment="Left" 
                           Text="м²" />
            </Grid>
        </Border>
        <Border Grid.Row="4"
                Padding="16"
                Margin="20,10,20,10"
                CornerRadius="8"
                BorderBrush="Gray"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Контроль толщины"
                           Margin="5,-28,0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Foreground="Black"
                           Background="White"
                           Padding="3,0,3,0"
                           FontSize="14"/>
                <TextBlock Grid.Row="0" 
                           Grid.Column="0" 
                           Margin="10,0,0,0" 
                           Text="Предел толщины:" />
                <TextBlock Grid.Row="0" 
                           Grid.Column="2" 
                           Margin="10,0,0,0" 
                           Text="мм" />
                <TextBlock Grid.Row="0" 
                           Grid.Column="1" 
                           Margin="10,0,0,0" 
                           Text="{Binding Limit}" />
                <TextBlock Grid.Row="1" 
                           Grid.Column="0" 
                           Margin="10,0,0,0" 
                           HorizontalAlignment="Right" 
                           Text="Статус:" />
                <TextBlock Grid.Row="1" 
                           Grid.Column="1" 
                           Margin="10,0,0,0" 
                           HorizontalAlignment="Left" 
                           Text="{Binding Statusmessage}" />
            </Grid>
        </Border>
    </Grid>
</Window>
